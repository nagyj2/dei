@ glai_dam : 1d10 + str_mod
@ unarm : 1d20 + str_mod + prof
@ unarm_dam : 1 + str_mod
@	pole : 1d20 + str_mod + prof
@ pole_dam : 1d4 + str_mod
@ 
@ 	\ Abilities \
@	spirit : 2d6
@ stone : 1d12 + con_mod
